set secure
set nocompatible

set nomodeline

set noeb vb t_vb=

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set autoindent
set smartindent

set backspace=indent,eol,start

"set hlsearch
set nohlsearch
set incsearch
set ignorecase
set smartcase

highlight ColorColumn ctermbg=235
set colorcolumn=80

set cursorline
hi CursorLine term=bold cterm=bold guibg=Grey85

set wildmenu

set mouse=a

syntax on
